---
import { formatDate } from '../utils/date';
import H3 from './common/h3.astro';
export interface Props {
  title: string;
  href: string;
  src: string;
  alt: string;
  readingTime: number;
  publishedAt: Date;
}

const { href, title, src, alt, publishedAt, readingTime } = Astro.props;
---

<li class="flex-1 text-gray-400">
  <a href={href} class="w-full text-sm sm:text-base">
    <img class="w-full mb-2" src={src} alt={alt} />
    <time class="capitalize" datetime={publishedAt.toISOString()}
      >{formatDate(publishedAt)}</time
    >
    <span>â€” {readingTime} mins de lectura</span>
    <H3 classes="mt-2">{title}</H3>
  </a>
</li>
