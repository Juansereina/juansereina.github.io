---
import { format } from 'date-fns';
import { es } from 'date-fns/locale';
import H3 from './common/h3.astro';
export interface Props {
  title: string;
  href: string;
  src: string;
  alt: string;
  readingTime: number;
  publishedAt: Date;
}

const { href, title, src, alt, publishedAt, readingTime } = Astro.props;

const formatDate = (date: Date) => {
  const dateFormat = 'dd MMM, yyyy';

  return format(date, dateFormat, { locale: es });
};
---

<li class="w-ful text-gray-400">
  <a href={href} class="w-full text-sm sm:text-base">
    <img class="w-full rounded mb-2" src={src} alt={alt} />
    <time datetime={publishedAt.toISOString()}>{formatDate(publishedAt)}</time>
    <span>â€” {readingTime} mins de lectura</span>
    <H3 classes="mt-2">{title}</H3>
  </a>
</li>
