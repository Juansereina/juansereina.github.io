---
export interface Props {
  classes?: string;
  href: string;
  isActive?: boolean;
  rel?: string;
  target?: string;
}
const { classes, href, target, rel, isActive } = Astro.props;
---

<a
  class:list={[
    `group transition duration-200 ${classes || ''}`,
    { 'text-cyan-400': isActive },
  ]}
  href={href}
  target={target}
  rel={rel}
>
  <slot />
  <span
    class="block max-w-0 group-hover:max-w-full transition-all duration-200 h-0.5 bg-cyan-300 -mt-1"
  ></span>
</a>
